  <property>
    <name>dfs.name.dir</name>
    <value>/hadoop/drbd/hadoop_image,/hadoop/hadoop_image_local</value>
  </property>

  <property>
    <name>dfs.data.dir</name>
    <value>/mnt/disk1/hadoop/data</value>
  </property>

  <property>
    <name>dfs.support.append</name>
    <value>true</value>
  </property>


 

